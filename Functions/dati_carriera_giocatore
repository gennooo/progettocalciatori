CREATE OR REPLACE FUNCTION carriera_giocatore(id_player id_valido)
RETURNS TABLE(
    Inizio_Carr Date,
    Fine_Carr Date,
    s_part_gioc,
    s_goal_segn,
    s_goal_sub,
    s_assist
)
AS $$
DECLARE
    Inizio_Carr Date;
    Fine_Carr Date;
    s_part_gioc;
    s_goal_segn;
    s_goal_sub;
    s_assist;

BEGIN
    SELECT Data_Inizio INTO Inizio_Carr
    FROM Militanza
    WHERE id_giocatore = id_Giocatore
    ORDER BY data_inizio ASC
    LIMIT 1;

    SELECT Sum(partite_giocate), Sum(goal_segnati), 
    Sum(goal_subiti), Sum(assist)
    INTO s_part_gioc, s_goal_segn, s_goal_sub, s_assist
    FROM Militanza
    WHERE id_giocatore = id_player;
        
    SELECT data_termine INTO Fine_Carr
    FROM Militanza
    WHERE id_giocatore = id_player
    ORDER BY data_termine DESC
    LIMIT 1;

    RETURN QUERY SELECT
	Inizio_Carr,
	Fine_Carr,
	s_part_gioc,
	s_goal_segn,
	s_goal_sub,
	s_assist;

END;
$$ LANGUAGE plpgsql;
